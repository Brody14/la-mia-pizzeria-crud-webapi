@{
    Layout = "_Layout";
}

@section Style{
    <link rel="stylesheet" href="~/css/user.css" />
}

@model Pizza

    <div class="container p-5">

        <div class="row p-3 align-items-center">

            <div class="col-lg-6 col-md-12 p-3">
                <img class="mx-auto img-fluid" src="@Model.Image" alt="@Model.Name">
            </div>
            

            <div class="col-lg-6 col-md-12">

                <div class="mb-2">

                    @if (Model.Category != null)
                    {
                        <span class="fs-6 text-secondary"> Categoria > @Model.Category.Name</span>

                    }
                    else
                    {
                    <span class="fs-6 text-secondary">Nessuna categoria</span>
                    }
                </div>

                <h5 class="card-title lh-lg mb-3">@Model.Name</h5>

                <div class="d-flex align-items-baseline">
                    <div class="col rating-wrapper d-flex align-self-center">
                        <ul class="list-unstyled d-flex">

                            @for (int i = 0; i < @Model.Rating; i++)
                            {
                                <li class="rate-icons"><i class="fa-solid fa-star"></i></li>
                            }

                        </ul>

                        <ul class="list-unstyled d-flex">
                            @for (int i = 0; i < 5 - @Model.Rating; i++)
                            {
                                <li class="rate-icons"><i class="fa-regular fa-star"></i></li>
                            }
                        </ul>


                    </div>

                    <div class="col">
                        @{
                            Random ran = new Random();
                        }
                        <span> @ran.Next(0,10) Recensioni </span>
                    </div>

                    <div class="col">
                        <span> <i class="icon fa-solid fa-pencil"></i> Scrivi una recensione </span>
                    </div>
                </div>

                <hr />


                <ul class="list-unstyled">
                    <li>
                        Descrizione: @Model.Description
                    </li>
                    <li>
                        Prezzo: @Model.Price&euro;
                    </li>
                </ul>


                <div class="mb-3">

                   <h6 class="text-secondary">Ingredienti:</h6>
                   <div>
                        @if (Model.Ingredients != null && Model.Ingredients.Count > 0)
                        {
                            @foreach (Ingredient ingredient in Model.Ingredients)
                            {
                                Ingredient last = Model.Ingredients.Last();
                                @if (ingredient != last)
                                {
                                    <span>@ingredient.Name,</span>
                                }
                                else
                                {
                                    <span>@ingredient.Name</span>
                                }
                            }
                        }
                        else
                        {
                            <span>Non ci sono ingredienti da mostrare</span>
                        }
                   </div>
                </div>

                <div>
                    <button type="button" class="btn btn-danger align-self-end">
                        <i class="fa-solid fa-cart-shopping"></i>
                    </button>
                </div>


            </div>
        </div>

    </div>

    <div class="container pb-5 text-center">
        <a href="@Url.Action("Index", "Home")">
            <i class="icon fa-solid fa-left-long">
                <p> Torna Indietro </p>
            </i>
        </a>
    </div>